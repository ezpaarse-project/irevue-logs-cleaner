for LOGFILE in $LOGFILES
do
  BADLOGFILE="${LOGFILE}.ko"
  if [ -f $ROOTPATH/$BADLOGFILE ]; then
    echo "$ROOTPATH/$BADLOGFILE en cours de traitement"
    zcat $ROOTPATH/$BADLOGFILE | \
      ./irevue-logs-cleaner.njs | \
      gzip -9 > $ROOTPATH/$LOGFILE
    echo "$ROOTPATH/$BADLOGFILE trait√©"
  fi 
done